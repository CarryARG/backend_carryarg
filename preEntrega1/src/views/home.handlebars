<div>
  <h1>Nuestros Productos</h1>
  {{#each mapAllproducts}}
    <div style="width: 250px; padding: 15px; border: solid 3px; margin: 15px;">
      <p>{{this.name}}</p>

      <p>{{this.description}}</p>

      <p>{{this.price}}</p>

    </div>
  {{/each}}
  <div>
    {{this.pagingCounter}}
    {{totalPages}}

    <hr />
    <hr />

    {{prevPage}}
    {{#if hasPrevPage}}
      <a href="http://localhost:8080/?page={{prevPage}}">⬅️</a>
    {{/if}}
    {{page}}
    {{#if hasNextPage}}
      <a href="http://localhost:8080/?page={{nextPage}}">➡️</a>
    {{/if}}
    {{nextPage}}
  </div>
</div>